<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BNVText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="HeadText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="LargeText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/black_to_white_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
