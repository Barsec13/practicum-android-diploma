<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/SelectionFilters"
        style="@style/Text_Regular_16_400"
        android:layout_width="0dp"
        android:paddingStart="@dimen/margin_16"
        android:layout_height="@dimen/weight_height_60"
        android:gravity="center_vertical"
        android:textColor="?attr/black_to_white_color"
        app:layout_constraintEnd_toStartOf="@+id/sallary_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Пермский край " />

    <CheckBox
        android:id="@+id/sallary_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:buttonTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:button="@drawable/check_circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>